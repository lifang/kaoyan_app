<%= javascript_include_tag "preambles" %>
<input type="hidden" id="category_id" value="<%= @category_id %>"/>
<input type="hidden" id="l_start_level" value="<%= @last_start_level %>"/>
<input type="hidden" id="current_level" value="<%= @user_level %>"/>
<input type="hidden" id="l_end_level" value="<%= @last_end_level %>"/>
<input type="hidden" id="sentence_ids" value="<%= @sentence_ids.join(",") %>"/>
<div class="mc_box" id="read">
  <div class="words_func">
    <h2>请仔细看句子。</h2>
  </div>
  <div class="words_con">
    <p class="app_p"><%= @sentence.en_mean %></p>
  </div>
</div>
<div class="mc_box" id="write" style="display: none;">
  <div class="words_func">
    <h2>请点击单词组成完整句子。</h2>
    <a href="javascript:void(0)" title="点击重做" class="reset" onclick="javascript:backspace();">重置</a>
  </div>
  <div class="words_con">
    <div class="w_question">
      <div class="wq_drag" id="current"></div>
      <div class="drag_ul" id="select"></div>
      <div class="clear"></div>
    </div>
  </div>
  <div class="words_func">
    <button class="confirm" type="button" onclick="javascript:check_sentence()" >确定</button>
  </div>
</div>
<script type="text/javascript">
  var _answer = wanted_str($(".app_p").html()); //句子
  var _ans_arr = str2arr(_answer);   //句子变成数组
  var _correct_answer = _ans_arr.join(" ");  //拼成答案
</script>